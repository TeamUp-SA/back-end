{
  "version": 3,
  "name": "Topup Krakend Gateway",
  "port": 8888,
  "cache_ttl": "300s",
  "timeout": "3000ms",
  "endpoints": [
    {
      "endpoint": "/user/{rest}",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{rest}",
          "host": ["http://user-service:8081"]
        }
      ]
    },
    {
      "endpoint": "/auth/{rest}",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{rest}",
          "host": ["http://auth-service:8082"]
        }
      ]
    },
    {
      "endpoint": "/app/{rest}",
      "output_encoding": "no-op",
      "backend": [
        {
          "url_pattern": "/{rest}",
          "host": ["http://app-service:3001"]
        }
      ]
    }
  ],
  "extra_config": {
    "github_com/devopsfaith/krakend-cors": {
      "allow_origins": ["*"],
      "allow_methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "allow_headers": ["Origin", "Authorization", "Content-Type"],
      "expose_headers": ["Content-Length"],
      "max_age": "12h",
      "allow_credentials": true
    },
    "github_com/devopsfaith/krakend-http-server": {
      "read_timeout": "10s",
      "write_timeout": "10s",
      "idle_timeout": "60s"
    }
  }
}
